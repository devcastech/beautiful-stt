{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Permisos para la ventana principal",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:allow-open",
    "fs:allow-read-file",
    "fs:allow-write-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$AUDIO/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$HOME/**" },
        { "path": "$RESOURCE/**" },
        { "path": "/Users/**" },
        { "path": "/Volumes/**" }
      ]
    }
  ]
}