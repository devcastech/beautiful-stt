{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "beautiful speech to text",
  "version": "0.2.0",
  "identifier": "com.beautiful-stt",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "beautiful speech to text",
        "width": 800,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {
    "fs": null,
    "dialog": null,
    "opener": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "cuda-libs/*": ""
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
