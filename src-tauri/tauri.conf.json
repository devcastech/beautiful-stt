{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "beautiful speech to text",
  "version": "0.1.0",
  "identifier": "com.beautiful-stt",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "beautiful speech to text",
        "width": 800,
        "height": 700
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob:; media-src 'self' asset: https://asset.localhost blob:; connect-src 'self' asset: https://asset.localhost ipc: http://ipc.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$AUDIO/**",
          "$DOWNLOAD/**",
          "$DOCUMENT/**",
          "$HOME/**",
          "$RESOURCE/**",
          "/Users/**",
          "/Volumes/**"
        ]
      }
    }
  },
  "plugins": {
    "fs": null,
    "dialog": null,
    "opener": null
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "cuda-libs/*": ""
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
